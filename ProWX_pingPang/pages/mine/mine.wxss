.mineBody{
    width: 100%;
    height: auto;
    background: rgb(242, 245, 247);
    display: flex;
    flex-direction: column;
    align-items: center;
}
.mineHeader{
    width: 100%;
    height: 300rpx;
    background:grey;
    display: flex;
    justify-content: space-between;
}
.headerLeft{
   width: 35%;
   height: 100px;
   display: flex;
   justify-content: center;
}
.headerLeft image{
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-top: 50rpx;
}
.headerRight{
    width: 65%;
    height: 200px;
    display: flex;
    flex-direction: column;
}

.mineTitle{
    width: 94%;
    height: 200rpx;
    padding-left: 3%;
    padding-right: 3%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid grey;
}
.mineTitle text{
    width: 64%;
}
.mineTitle button{
    width: 30%;
}

.mineTools{
    width: 100%;
    height: auto;
}
.tool{
    width: 90%;
    height: 100rpx;
    border-bottom: 1px solid grey;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 5%;
    padding-right: 5%;
}
.tool image{
    width: 20px;
    height: 20px;
}

































