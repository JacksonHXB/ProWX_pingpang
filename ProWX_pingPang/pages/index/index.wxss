swiper image {
    width: 100%;
}

.bodyHeader {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 25rpx;
}

.indexBody1 {
    width: 94%;
    height: auto;
    border-bottom: 1px solid grey;
    padding-bottom: 25rpx;
    padding: 2%;
}

.bh_item1 {
    font-size: 16px;
    font-weight: bold;
    border-left-width: 5px;
    border-left-style: solid;
    border-left-color: red;
}

.bh_item2 {
    display: flex;
    font-size: 15px;
    align-items: center;
}

.activity-item {
    display: flex;
    font-size: 15px;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
    justify-content: space-between;
}

.item-time {
    align-items: center;
    font-size: 12px;
}

.tradeMarket {
    width: 100%;
    height: 120px;
    display: flex;
}

.tradeLeft {
    width: 45%;
    height: 100%;
    background: blue;
    position: relative;
}

.tradeLeft image {
    width: 100%;
    height: 100%;
}

.tradeLeft text {
    font-size: 12px;
    color: white;
    display: block;
    width: 100%;
    height: 22px;
    background: linear-gradient(rgba(27, 27, 27, 0), rgba(27, 27, 27, 0.8));
    position: absolute;
    bottom: 0px;
}

.tradeRight {
    width: 55%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.tradeRight text{
    font-size: 12px;
    color: white;
    width: 97%;
    height: 25%;
    background: rgb(226, 51, 51);
    line-height: 30px;
    padding-left: 6px;
}
